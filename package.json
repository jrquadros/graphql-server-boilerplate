{
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@types/graphql-relay": "^0.6.0",
		"@types/koa": "^2.13.1",
		"@types/koa-bodyparser": "^4.3.0",
		"@types/koa-graphql": "^0.8.4",
		"@types/koa-helmet": "^6.0.2",
		"@types/koa-logger": "^3.1.1",
		"@types/koa__cors": "^3.0.2",
		"@types/node": "^15.0.2",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"eslint": "^7.26.0",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.0",
		"nodemon": "^2.0.12",
		"prettier": "^2.2.1",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.5",
		"webpack": "^5.44.0",
		"webpack-cli": "^4.7.2",
		"webpack-dev-server": "^3.11.2",
		"webpack-node-externals": "^3.0.0",
		"webpack-shell-plugin-next": "^2.2.2"
	},
	"dependencies": {
		"@koa/cors": "^3.1.0",
		"@koa/router": "^10.0.0",
		"dotenv": "^10.0.0",
		"graphql": "^15.5.0",
		"graphql-relay": "^0.6.0",
		"koa": "^2.13.1",
		"koa-bodyparser": "^4.3.0",
		"koa-graphql": "^0.8.0",
		"koa-helmet": "^6.1.0",
		"koa-logger": "^3.2.1"
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write --single-quote true --trailing-comma all --print-width 120 --semi false",
      "yarn lint",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint:staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"scripts": {
		"clean": "rm -rf dist",
		"lint": "eslint . --ext .ts --fix",
		"dev": "yarn lint && webpack --watch --config ./webpack.config.dev.js",
		"build": "yarn lint && webpack --config ./webpack.config.prod.js",
		"lint:staged": "lint-staged"
	}
}
